extends ../layout.pug

block content

    h2 Edita un Cliente
    form(method="POST" action="/clientes/update")
        .form-group
            label Nombre
            input.form-control(type="text", name="nombre", value=cliente.nombre)
        .form-group
            label Apellidos
            input.form-control(type="text", name="apellidos" value= cliente.apellidos)
        .form-group
            label Direccion
            input.form-control(type="text", name="direccion" value= cliente.direccion)
        .form-group
            label Mail
            input.form-control(type="text", name="email" value= cliente.email)
        .form-group
            label Edad
            input.form-control(type="number", name="edad" value= cliente.edad)
        .form-group
            label Sexo
            select.form-control(name="sexo" value= cliente.sexo)
                option(value="m") Masculino
                option(value="f") Femenino
        .form-group
            label Fecha de inscripcion
            input.form-control(type="text", name="fecha_inscripcion" value=cliente.fecha_inscripcion)
        .form-group
            label Cuota
            input.form-control(type="text", name="cuota" value=cliente.cuota)
        .form-group
            label DNI
            input.form-control(type="text", name="dni" value=cliente.dni)

            input(type="hidden" name="id" value =cliente.id)
        input.btn.btn-block.btn-info(type="submit" value="Guardar cambios")